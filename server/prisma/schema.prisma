generator client {
  provider = "prisma-client"
    output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}
// relationship of tables:
// user 1 to M feedback
// user  1 to m session
// user  1 to M appointment
//  feedback 1 to 1 appointment

// creating the table model
model User {
  id        Int      @id @default(autoincrement())
  username  String
  email     String   @unique
  password  String
  mobile    String?
  role      Role

  doctor    Doctor?
  patient   Patient?

  session   Session[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}

enum Role {
  ADMIN
  DOCTOR
  PATIENT
}

model Doctor {
  id           Int    @id @default(autoincrement())
  userId       Int    @unique
  description  String?
  specialization String?
  experience   Int?
  consultationFee Int?
isActive        Boolean @default(true)

  user         User   @relation(fields: [userId], references: [id])

  appointments Appointment[] @relation("DoctorAppointments")
  feedbackTaken Feedback[]   @relation("FeedbackTaken")
}
model Patient {
  id              Int    @id @default(autoincrement())
  userId          Int    @unique
  age             Int?
  gender          String?
  medicalHistory  String?

  user            User   @relation(fields: [userId], references: [id])

  appointments    Appointment[] @relation("PatientAppointments")
  feedbackGiven   Feedback[]    @relation("FeedbackGiven")
}


model Feedback {
  id            Int @id @default(autoincrement())

  givenById     Int
  takenById     Int
  appointmentId Int @unique

  givenBy       Patient @relation("FeedbackGiven", fields: [givenById], references: [id])
  takenBy       Doctor  @relation("FeedbackTaken", fields: [takenById], references: [id])

  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  rating        Int
  comment       String

  createdAt     DateTime @default(now())
}


// session (for storing the token)
model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  token     String @unique
  startTime DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
}



model Appointment {
  id         Int @id @default(autoincrement())

  doctorId   Int
  patientId  Int

  startTime  DateTime
  endTime    DateTime

  doctor     Doctor  @relation("DoctorAppointments", fields: [doctorId], references: [id])
  patient    Patient @relation("PatientAppointments", fields: [patientId], references: [id])

  feedback   Feedback?

  status     AppointmentStatus @default(PENDING)

  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([doctorId, startTime])
}

enum AppointmentStatus {
  PENDING
  COMPLETED
  CANCELLED
}
